{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "lib": ["ES6"],
    "composite": false,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",         
    // "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules", 
    "dist", 
  ],
}
