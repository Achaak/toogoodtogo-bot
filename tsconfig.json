{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "."
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    ".storage",
  ],
}
